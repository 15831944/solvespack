                                SEdge *errorAt, bool keepDir) const
{
    int i;

    dest-&gt;AddPoint(first);
    dest-&gt;AddPoint(last);

    do {
        for(i = 0; i &lt; l.n; i++) {
            SEdge *se = &amp;(l.elem[i]);
            if(se-&gt;tag) continue;

            if(se-&gt;a.Equals(last)) {
                dest-&gt;AddPoint(se-&gt;b);
                last = se-&gt;b;
                se-&gt;tag = 1;
                break;
