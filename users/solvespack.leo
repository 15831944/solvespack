    HKEY SolveSpace = GetRegistryKey();
    DWORD type, newval, len = sizeof(DWORD);
    LONG result = RegQueryValueEx(SolveSpace, &amp;Widen(name)[0], NULL,
                                  &amp;type, (BYTE*) &amp;newval, &amp;len);
