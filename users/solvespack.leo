            tmin = max(tmin, -up/ud);
            tmax = min(tmax, (1 - up)/ud);
        } else if(ud &lt; -LENGTH_EPS) {
            tmax = min(tmax, -up/ud);
            tmin = max(tmin, (1 - up)/ud);
