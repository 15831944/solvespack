    if(font-&gt;textureUpdated) {
        // LocateGlyph modified the texture, reload it.
        canvas-&gt;InvalidatePixmap(font-&gt;texture);
        font-&gt;textureUpdated = false;
    }

    canvas-&gt;DrawPixmap(font-&gt;texture,
                       { (double)x, (double)Flip(y), 0.0 },
                       { (double)w,  0.0, 0.0 },
                       { 0.0, (double) h, 0.0 },
                       { s0, t1 },
                       { s1, t0 },
                       hcf);
}

