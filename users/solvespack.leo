<t tx="leo1.20171224221236.112">void SBezierList::CullIdenticalBeziers() {
    int i, j;

    l.ClearTags();
    for(i = 0; i &lt; l.n; i++) {
        SBezier *bi = &amp;(l.elem[i]), bir;
        bir = *bi;
        bir.Reverse();

        for(j = i + 1; j &lt; l.n; j++) {
            SBezier *bj = &amp;(l.elem[j]);
            if(bj-&gt;Equals(bi) ||
               bj-&gt;Equals(&amp;bir))
            {
                bi-&gt;tag = 1;
                bj-&gt;tag = 1;
            }
        }
    }
    l.RemoveTagged();
}

