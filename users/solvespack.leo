<t tx="leo1.20171224221230.17">static int MoveTo(const FT_Vector *p, void *cc)
{
    OutlineData *data = (OutlineData *) cc;
    data-&gt;px = p-&gt;x;
    data-&gt;py = p-&gt;y;
    return 0;
}

