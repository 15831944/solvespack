double DeltaYOfScrollEvent(GdkEventScroll *event) {
    double delta_y = event-&gt;delta_y;
    if(delta_y == 0) {
        switch(event-&gt;direction) {
            case GDK_SCROLL_UP:
            delta_y = -1;
            break;

            case GDK_SCROLL_DOWN:
            delta_y = 1;
            break;

            default:
            /* do nothing */
            return false;
        }
    }

    return delta_y;
}

