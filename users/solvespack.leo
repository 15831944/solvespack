<t tx="leo1.20171224221220.71">void ConstraintBase::AddEq(IdList&lt;Equation,hEquation&gt; *l, Expr *expr, int index) const
{
    Equation eq;
    eq.e = expr;
    eq.h = h.equation(index);
    l-&gt;Add(&amp;eq);
}

