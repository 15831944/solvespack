<t tx="leo1.20171224221236.3">void CleanupUnused() {
    for(auto it = items.begin(); it != items.end();) {
        if(it-&gt;first.expired()) {
            glDeleteTextures(1, &amp;it-&gt;second);
            it = items.erase(it);
            continue;
        }
        it++;
    }
}
