<t tx="leo1.20171224221233.96">static bool ProcessKeyDown(WPARAM wParam)
{
    if(GraphicsEditControlIsVisible() &amp;&amp; wParam != VK_ESCAPE) {
        if(wParam == VK_RETURN) {
            SS.GW.EditControlDone(EditControlText(GraphicsEditControl).c_str());
            return true;
