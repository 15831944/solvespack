    Style ns = {};
    FillDefaultStyle(&amp;ns, d);
    ns.h = h;
    if(isDefaultStyle) {
        ns.name = CnfPrefixToName(d-&gt;cnfPrefix);
    } else {
        ns.name = "new-custom-style";
