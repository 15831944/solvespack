        dest-&gt;AddEmptyContour();
        if(!AssembleContour(first, last, &amp;(dest-&gt;l.elem[dest-&gt;l.n-1]),
                errorAt, keepDir))
        {
            allClosed = false;
        }
        // But continue assembling, even if some of the contours are open
    }
}

