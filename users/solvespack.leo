<t tx="leo1.20171224221230.32">char32_t utf8_iterator::operator*()
{
    const uint8_t *it = (const uint8_t*) this-&gt;p;
    char32_t result = *it;

    if((result &amp; 0x80) != 0) {
      unsigned int mask = 0x40;

      do {
        result &lt;&lt;= 6;
        unsigned int c = (*++it);
        mask   &lt;&lt;= 5;
        result  += c - 0x80;
      } while((result &amp; mask) != 0);

      result &amp;= mask - 1;
    }

    this-&gt;n = (const char*) (it + 1);
    return result;
}

