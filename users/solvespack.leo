Vector blockTransform(Vector v) {
    Vector r = blockT;
    r = r.Plus(blockX.ScaledBy(v.x));
    r = r.Plus(blockY.ScaledBy(v.y));
    r = r.Plus(blockZ.ScaledBy(v.z));
