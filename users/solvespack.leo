        proto-&gt;ClosestPointTo(se-&gt;b, &amp;ub, &amp;vb);

        if(sameNormal) {
            se-&gt;a = Vector::From(ua, va, 0);
            se-&gt;b = Vector::From(ub, vb, 0);
        } else {
            // Flip normal, so flip all edge directions
            se-&gt;b = Vector::From(ua, va, 0);
            se-&gt;a = Vector::From(ub, vb, 0);
