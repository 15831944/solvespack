            DrawText(hdc, text.c_str(), text.length(), &amp;rc, DT_LEFT | DT_WORDBREAK);
            EndPaint(hwnd, &amp;ps);
            break;
        }

        default:
            return DefWindowProc(hwnd, msg, wParam, lParam);
    }

    return 1;
}

